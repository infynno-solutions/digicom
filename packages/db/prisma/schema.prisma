generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  name            String
  username        String    @unique
  email           String    @unique
  password        String
  emailVerifiedAt DateTime?
  timezone        String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  Token           Token[]
}

enum TokenType {
  EMAIL_VERIFICATION
}

model Token {
  token     String    @unique
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  type      TokenType
  expiresAt DateTime?
}
